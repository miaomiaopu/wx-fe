<!--pages/dcard/dcard.wxml-->
<view class="header">
  <van-button type="info">评 论</van-button>
  <van-icon
    color="red"
    size="2rem"
    wx:if="{{ !is_like }}"
    name="like-o"
    bind:click="like"
  />
  <van-icon
    size="2rem"
    color="red"
    wx:if="{{ is_like }}"
    name="like"
    bind:click="unlike"
  />
</view>

<view class="container">
  <text class="title">{{ card_title }}</text>

  <view wx:if="{{ str1 }}" class="str box">
    <text>{{ str1 }}</text>
  </view>
  <view wx:if="{{ image1 }}" class="box">
    <van-image
      custom-class="image"
      width="100"
      height="100"
      lazy-load
      src="{{ image1 }}"
    />
  </view>

  <view wx:if="{{ str2 }}" class="str box">
    <text class="str">{{ str2 }}</text>
  </view>
  <view wx:if="{{ image2 }}" class="box">
    <van-image
      custom-class="image"
      width="100"
      height="100"
      lazy-load
      src="{{ image2 }}"
    />
  </view>

  <view wx:if="{{ str3 }}" class="str box">
    <text class="str">{{ str3 }}</text>
  </view>
  <view wx:if="{{ image3 }}" class="box">
    <van-image
      custom-class="image"
      width="100"
      height="100"
      lazy-load
      src="{{ image3 }}"
    />
  </view>

  <view wx:if="{{ str4 }}" class="str box">
    <text>{{ str4 }}</text>
  </view>
</view>
