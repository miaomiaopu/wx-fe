/* pages/dcard/dcard.wxss */
.header {
  margin-top: 1rem;
  display: flex;
  justify-content: space-around;
}

.container {
  padding: 1rem;
  margin-left: 5vw;
  margin-right: 5vw;
  width: 90vw;
  display: flex;
  flex-direction: column;
  align-items: stretch;
}

.title {
  font-size: x-large;
  font-weight: bolder;
  display: block;
  margin-bottom: 0.8rem;
}

.str {
  font-size: 1.25rem;
  padding: 0.5rem;
  background-color: #66c6f7;
  color: white;
  border-radius: 0.5rem;
}

.image {
  padding: 0.3rem;
  width: 100% !important;
  height: 10rem !important;
}

.box {
  margin-top: 0.2rem;
  margin-bottom: 0.3rem;
  text-align: center;
}

.date {
  text-align: right;
  color: #0080ff;
}
