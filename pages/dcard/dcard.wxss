/* pages/dcard/dcard.wxss */
.header {
  margin-top: 1rem;
  display: flex;
  justify-content: space-around;
}

.container {
  padding: 1rem;
  margin-left: 5vw;
  margin-right: 5vw;
  width: 90vw;
  display: flex;
  flex-direction: column;
  align-items: stretch;
}

.title {
  font-size: x-large;
  font-weight: bolder;
  display: block;
  margin-bottom: 0.8rem;
}

.str {
  font-size: 1.25rem;
  padding: 0.5rem;
  background-color: #f5f4f4;
  border-radius: 0.5rem;
}

.image {
  padding: 0.3rem;
  border: 0.1rem solid #cce8e3;
}

.box {
  margin-top: 0.2rem;
  margin-bottom: 0.3rem;
}

.date {
  text-align: right;
  color: #bbb8b8;
}

