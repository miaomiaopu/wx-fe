/* pages/stheme/stheme.wxss */
.search-field {
  padding-top: 0.2rem;
  padding-bottom: 0.2rem;
  margin-left: 0.2rem;
}

.search-input {
  font-size: large;
}

.theme-view {
  padding: 0.3rem 0.4rem 0.4rem 0.4rem;
  margin-top: 0.5rem;
  margin-left: 2vw;
  margin-right: 2vw;
  width: 100vw - 0.4rem;
  background: #e5f3fe;
  border: #74d7cb solid 0.1rem;
  border-radius: 0.4rem;
}

.theme-head {
  line-height: 2.5rem;
  font-size: x-large;
  margin-bottom: 0.4rem;
}

.cancel-button {
  display: flex;
  margin-left: 0.14rem;
  width: 65px;
  height: 100%;
  background-color: #07c160;
  align-items: center;
  justify-content: center;
  color: white;
}

.tag-class {
  margin-right: 0.3rem;
}